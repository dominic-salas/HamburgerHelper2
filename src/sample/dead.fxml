<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Dead">
   <children>
      <Button fx:id="respawnButton" layoutX="267.0" layoutY="549.0" mnemonicParsing="false" onAction="#changeScene"
              text="Respawn"/>
      <ChoiceBox fx:id="weaponSelect" layoutX="224.0" layoutY="454.0" prefWidth="150.0"/>
      <Text layoutX="274.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You died :("/>
      <Text layoutX="244.0" layoutY="412.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You could leave, or..."/>
      <Text layoutX="223.0" layoutY="437.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pick a weapon and try again:"/>
      <Text layoutX="232.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="RIP">
         <font>
            <Font size="96.0"/>
         </font>
      </Text>
      <Button fx:id="leaveButton" layoutX="259.0" layoutY="514.0" mnemonicParsing="false" onAction="#exitGame"
              text="Leave Game"/>
      <Text layoutX="270.0" layoutY="232.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Score: "
            textAlignment="CENTER"/>
      <Label fx:id="scoreValue" layoutX="268.0" layoutY="248.0" text="score value" textAlignment="CENTER"/>
      <Label fx:id="highscore" layoutX="235.0" layoutY="351.0" text="(highscore here)" textAlignment="CENTER">
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
   </children>
</AnchorPane>
